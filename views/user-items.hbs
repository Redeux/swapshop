<header class="intro-header" style="background-image: url('/images/records.png')">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                    <div class="site-heading">
                        <div class="homeHeader">
                          <h1 id="itemTitle">Your Shop</h1>
                          <a href="user/transactions">New Swap</a>
                          <a href="user/items/create">Add Items</a>
                          <a href="/pending">View Your Pending Swaps</a>
                          <br>
                          <br>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </header>
 
   <div class="row">
     <h2 class="subtitles">Your Items for Swap</h1>
                  {{#each items}}
                    <div class="col-sm-4 col-lg-4 col-md-4 itemBox">
                        <div class="thumbnail">
                                <h4 id="printItemName">{{this.itemName}}</h4>
                                <p id="printDesc">{{this.description}}</p>
                                <h4 id="money">${{this.value}}</h4>
                                <img src={{this.imageLink}} alt="">
                        </div>
                        <button href="/item/delete" type="delete" id="submitBtn">Delete</button>
                    </div>
                    <hr>
                    {{/each}}
    </div>


      
    <!-- /.container -->

    <div class="container">

        <hr>

        <!-- Footer -->
        <footer>
            <div class="row">
                <div class="col-lg-12 footer">
                    <p>Copyright &copy; SwapShop 2017</p>
                </div>
            </div>
        </footer>

    </div>
