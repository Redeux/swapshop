    <!-- Page Content -->
    <div class="container content">

        <div class="row top">
            <div class="col-md-12">
                <div class="list-group links">
                    <a href="/signin" class="list-group-item">Sign-in</a>
                    <a href="/DUNNOYET" class="list-group-item">View Other Shops</a>
                </div>
                <p class="lead" id="yourShop">Your Shop</p>
            </div>
        </div>

            
<h2 id="itemTitle">Add an Item to Your Shop</h2>
<div class="row ">
  <div class="col-sm-4 addItem">
      <form class="create-update-form" action="/item/create" method="post">
        <div class="form-group">
          <label for="UserId">User Id</label><br>
          <input type="text" id="userId" name="UserId"><br>
          <label for="itemName">Name of Item:</label><br>
          <input type="text" id="itemName" name="itemName"><br>
          <label for="description">Description:</label><br>
          <input type="text" id="description" name="description"><br>
          <label for="imageLink">Image Link:</label><br>
          <input type="text" id="imageLink" name="imageLink"><br>
          <label for="active">Active?</label><br>
          <input type="radio" name="active" value="true">Yes<br>
          <input type="radio" name="active" value="false">No<br>
          <label for="for_swap">For swap?</label><br>
          <input type="radio" name="for_swap" value="true">Yes<br>
          <input type="radio" name="for_swap" value="false">No<br>
          <label for="for_sale">For sale?</label><br>
          <input type="radio" name="for_sale" value="true">Yes<br>
          <input type="radio" name="for_sale" value="false">No<br>
          <label for="value">Value (in dollars):</label><br>
          <input type="text" id="value" name="value"><br>
          <label for="public">Public?</label><br>
          <input type="radio" name="public" value="true">Yes<br>
          <input type="radio" name="public" value="false">No<br>
        </div>
        <button type="submit">Add!</button>
      </form>
  </div>
</div>

                <div class="row">
                  {{#each items}}
                    <div class="col-sm-4 col-lg-4 col-md-4">
                        <div class="thumbnail">
                            <img src={{this.imageLink}} alt="">
                            <div class="caption">
                                <h4 class="pull-right">${{this.value}}</h4>
                                <h4><a href="#">{{this.itemName}}</a>
                                </h4>
                                <p>{{this.description}}</p>
                            </div>
                        </div>
                    </div>
                    {{/each}}
                </div>

            </div>
